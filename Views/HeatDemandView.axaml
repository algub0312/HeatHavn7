<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:HeatHavnAppProject.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                x:Class="HeatHavnAppProject.Views.HeatDemandView"
                x:DataType="vm:HeatDemandViewModel"
                mc:Ignorable="d">
                
<ScrollViewer>
  <StackPanel Margin="20">

  <TextBlock Text="ðŸ”¥ Heat Demand" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

  <ComboBox
    ItemsSource="{Binding Seasons}"
    SelectedItem="{Binding SelectedSeason}"
    Width="120"
    Margin="0,0,0,10" />

  <ItemsControl ItemsSource="{Binding FilteredHeatDemand}">
    <ItemsControl.ItemTemplate>
      <DataTemplate>
        <StackPanel Orientation="Horizontal" Margin="0,5">
          <TextBlock Text="{Binding Timestamp}" Width="200"/>
          <TextBlock Text="{Binding Value}" Width="100"/>
        </StackPanel>
      </DataTemplate>
    </ItemsControl.ItemTemplate>
  </ItemsControl>

</StackPanel>
</ScrollViewer>

</UserControl>
