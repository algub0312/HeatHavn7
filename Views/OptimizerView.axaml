<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:HeatHavnAppProject.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Avalonia;assembly=LiveChartsCore.SkiaSharpView.Avalonia"

             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="HeatHavnAppProject.Views.OptimizerView"
             x:DataType="vm:Optimizer"
             mc:Ignorable="d">
             
  <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3.8*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- Chart placeholder -->
        <lvc:CartesianChart
    Series="{Binding Series}"
    XAxes="{Binding XAxes}"
    YAxes="{Binding YAxes}"
    Height="400"
    Margin="10"/>

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
    <TextBlock Text="Total Cost: " FontWeight="Bold" Foreground="#b6a3d9"/>
    <TextBlock Text="{Binding TotalCost, StringFormat='{}{0:F2} DKK'}" Margin="10,0,20,0"/>

    <TextBlock Text="Total CO2: " FontWeight="Bold" Foreground="#b6a3d9"/>
    <TextBlock Text="{Binding TotalCO2, StringFormat='{}{0:F2} kg'}"/>
</StackPanel>

        <!-- Controls -->
        <StackPanel Grid.Column="1" Spacing="10">
         <TextBlock Text="Start Date:" FontWeight="Bold"/>
<StackPanel Orientation="Horizontal" Spacing="10">
            <TextBlock Text="Hour" VerticalAlignment="Center"/>
                    <ComboBox ItemsSource="{Binding Hours}" SelectedItem="{Binding StartHour}" Width="60"/>
  <TextBlock Text="Day:" VerticalAlignment="Center"/>
                    <ComboBox ItemsSource="{Binding Days}" SelectedItem="{Binding StartDay}" Width="60"/>
        <ComboBox ItemsSource="{Binding Months}" SelectedItem="{Binding StartMonth}" Width="90"/>
    <TextBlock Text="2024" VerticalAlignment="Center"/>
</StackPanel>

<TextBlock Text="End Date:" FontWeight="Bold" Margin="0,10,0,0"/>
<StackPanel Orientation="Horizontal" Spacing="10">

    <TextBlock Text="Hour" VerticalAlignment="Center"/>
        <ComboBox ItemsSource="{Binding Hours}" SelectedItem="{Binding EndHour}" Width="60"/>
            <TextBlock Text="Day:" VerticalAlignment="Center"/>
    <ComboBox ItemsSource="{Binding Days}" SelectedItem="{Binding EndDay}" Width="60"/>
    <ComboBox ItemsSource="{Binding Months}" SelectedItem="{Binding EndMonth}" Width="90"/>

    <TextBlock Text="2024" VerticalAlignment="Center"/>
</StackPanel>

            <TextBlock Text="Optimize for:" FontWeight="Bold"/>
            <ComboBox SelectedItem="{Binding SelectedOptimization}" Width="150">
    <ComboBox.Items>
        <x:String>Cost</x:String>
        <x:String>Emissions</x:String>
    </ComboBox.Items>
</ComboBox>

            <CheckBox Content="Scenario 1" IsChecked="{Binding Scenario1Enabled}" />
            <CheckBox Content="Scenario 2" IsChecked="{Binding Scenario2Enabled}" />

            <Button Content="Optimize" Command="{Binding OptimizeCommand}" Background="#b6a3d9"/>
            <Button Content="Save Results"  Background="#b6a3d9"/>

        </StackPanel>
    </Grid>
</UserControl>