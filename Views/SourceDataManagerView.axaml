<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:HeatHavnAppProject.ViewModels"
             x:Class="HeatHavnAppProject.Views.SourceDataManagerView"
             x:DataType="vm:SourceDataManagerViewModel">

    <DockPanel Margin="20">
        
        <!-- Title -->
        <TextBlock DockPanel.Dock="Top" Text="ðŸ“Š Source Data Manager"
                   FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

        
        <!-- Main content: 2 columns -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- List view on the left -->
            <ScrollViewer Grid.Column="0" Margin="0,0,10,0">
                <ItemsControl ItemsSource="{Binding SourceDataList}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray" BorderThickness="0,0,0,1" Padding="5">
                                <StackPanel Orientation="Horizontal" Spacing="15">
                                    <TextBlock Text="{Binding Season}" Width="80"/>
                                    <TextBlock Text="{Binding TimeFrom}" Width="80"/>
                                    <TextBlock Text="{Binding TimeTo}" Width="80"/>
                                    <TextBlock Text="{Binding HeatDemand}" Width="100"/>
                                    <TextBlock Text="{Binding ElectricityPrice}" Width="120"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Placeholder for chart preview -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="ðŸ“ˆ Heat Demand and Electricity Price (Preview)"
                           FontWeight="Bold" Margin="0,0,0,10"/>

                <!-- Replace this later with OxyPlot or LiveCharts if needed -->
                <Border Background="#222" Height="300" CornerRadius="5">
                    <TextBlock Text="(Chart preview coming soon...)" 
                               Foreground="Gray"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </Border>
            </StackPanel>

        </Grid>
    </DockPanel>

</UserControl>
