<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:HeatHavnAppProject.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Avalonia;assembly=LiveChartsCore.SkiaSharpView.Avalonia"
             x:Class="HeatHavnAppProject.Views.OptimizerView"
             x:DataType="vm:Optimizer"
             mc:Ignorable="d">

    <Grid Margin="20" Background="#f4f4f9">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" /> <!-- Chart Section -->
            <RowDefinition Height="3*" /> <!-- Controls Section -->
        </Grid.RowDefinitions>

        <!-- Chart Section -->
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="📊 Optimization Overview" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#4A90E2" 
                       Margin="0,0,0,10" />
            <Border BorderBrush="#D1D1D1" 
                    BorderThickness="2" 
                    CornerRadius="12" 
                    Padding="10" 
                    Background="#FFFFFF">
                <lvc:CartesianChart 
                    Series="{Binding Series}" 
                    XAxes="{Binding XAxes}" 
                    YAxes="{Binding YAxes}" 
                    Height="250" />
            </Border>
        </StackPanel>

        <!-- Controls Section -->
        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="15" Margin="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="15">
                    <!-- Total Cost and CO2 -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20">
                        <StackPanel>
                            <TextBlock Text="💰 Total Cost:" FontWeight="Bold" Foreground="#6c63ff" FontSize="14"/>
                            <TextBlock Text="{Binding TotalCost, StringFormat='{}{0:F2} DKK'}" FontSize="16" FontWeight="Bold" Foreground="#333"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="🌍 Total CO2:" FontWeight="Bold" Foreground="#6c63ff" FontSize="14"/>
                            <TextBlock Text="{Binding TotalCO2, StringFormat='{}{0:F2} kg'}" FontSize="16" FontWeight="Bold" Foreground="#333"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Start Date -->
                    <TextBlock Text="📅 Start Date:" FontWeight="Bold" FontSize="14" Margin="0,10,0,0"/>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="Hour" VerticalAlignment="Center" FontSize="12"/>
                        <ComboBox ItemsSource="{Binding Hours}" SelectedItem="{Binding StartHour}" Width="60"/>
                        <TextBlock Text="Day:" VerticalAlignment="Center" FontSize="12"/>
                        <ComboBox ItemsSource="{Binding Days}" SelectedItem="{Binding StartDay}" Width="60"/>
                        <ComboBox ItemsSource="{Binding Months}" SelectedItem="{Binding StartMonth}" Width="90"/>
                        <TextBlock Text="2024" VerticalAlignment="Center" FontSize="12"/>
                    </StackPanel>

                    <!-- End Date -->
                    <TextBlock Text="📅 End Date:" FontWeight="Bold" FontSize="14" Margin="0,10,0,0"/>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="Hour" VerticalAlignment="Center" FontSize="12"/>
                        <ComboBox ItemsSource="{Binding Hours}" SelectedItem="{Binding EndHour}" Width="60"/>
                        <TextBlock Text="Day:" VerticalAlignment="Center" FontSize="12"/>
                        <ComboBox ItemsSource="{Binding Days}" SelectedItem="{Binding EndDay}" Width="60"/>
                        <ComboBox ItemsSource="{Binding Months}" SelectedItem="{Binding EndMonth}" Width="90"/>
                        <TextBlock Text="2024" VerticalAlignment="Center" FontSize="12"/>
                    </StackPanel>

                    <!-- Optimization Options -->
                    <TextBlock Text="⚙️ Optimize for:" FontWeight="Bold" FontSize="14" Margin="0,10,0,0"/>
                    <ComboBox SelectedItem="{Binding SelectedOptimization}" Width="150">
                        <ComboBox.Items>
                            <x:String>Cost</x:String>
                            <x:String>Emissions</x:String>
                        </ComboBox.Items>
                    </ComboBox>

                    <!-- Scenarios -->
                    <TextBlock Text="📂 Scenarios:" FontWeight="Bold" FontSize="14" Margin="0,10,0,0"/>
                    <StackPanel Orientation="Horizontal" Spacing="20">
                        <CheckBox Content="Scenario 1" IsChecked="{Binding Scenario1Enabled}" FontSize="12"/>
                        <CheckBox Content="Scenario 2" IsChecked="{Binding Scenario2Enabled}" FontSize="12"/>
                    </StackPanel>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20" Margin="10,20,0,0">
                        <Button Content="🚀 Optimize" Command="{Binding OptimizeCommand}" Background="#6c63ff" Foreground="White" Width="120" Height="40" CornerRadius="20"/>
                        <Button Content="💾 Save Results" Background="#6c63ff" Foreground="White" Width="120" Height="40" CornerRadius="20"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
